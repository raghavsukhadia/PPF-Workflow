{
    "version": 2,
    "functions": {
        "api/index.ts": {
            "runtime": "vercel-node@latest",
            "includeFiles": "dist/public/**",
            "memory": 1024,
            "maxDuration": 15
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/api/index.ts"
        }
    ],
    "cleanUrls": true,
    "trailingSlash": false
}