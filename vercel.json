{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/dist/public/assets/$1"
        },
        {
            "source": "/logo.png",
            "destination": "/dist/public/logo.png"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/dist/public/index.html"
        }
    ],
    "cleanUrls": true,
    "trailingSlash": false
}